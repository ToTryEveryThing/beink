<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.article.mapper.FollowMapper">

    <resultMap id="BaseResultMap" type="com.example.article.pojo.Follow">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="followerId" column="follower_id" jdbcType="INTEGER"/>
            <result property="followingId" column="following_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,follower_id,following_id
    </sql>

    <select id="selectAllByFollowingId" resultMap="BaseResultMap">
        select * from follow where following_id = #{id}
    </select>

    <select id="selectAllByFollowerId" resultMap="BaseResultMap">
        select * from follow where follower_id = #{id}
    </select>
</mapper>
